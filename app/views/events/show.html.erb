<div><p><%= link_to "Back to Event List", events_url, :class => "btn btn-primary btn-large" %></p></div>

<h1><%= @event.name %></h1>
<h3><%= @event.description %></h3>
<p><%= @event.location %></p>

<h2>Participants</h2>
<ul>
<% @event.participants.each do |single_participant| %>
<li><strong><%= single_participant.popularity_label %></strong> <%= single_participant.name %> is bringing <%= single_participant.guests %> guests<br />
    <table>
    <tbody><td>Bringing a guest?</td>
    	<td><%= button_to "+1", add_guest_event_participant_path(@event.id, single_participant.id), :class => "btn btn-xs"  %></td></tbody>
    </table>
  </li>
<% end %>
</ul>

<h3>Add Participant</h3>
 
<%= form_for [@event, @event.participants.new]  do |form| %>
  <%= form.text_field :name %>
  <%= form.submit :class => "btn btn-success" %>
<% end %>
<div><p>Bring all your friends!</p></div>


