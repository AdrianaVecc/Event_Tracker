<div class="jumbotron">
  <h1>Event Tracker!</h1>
  <p>Planning an event? Track your participants here!</p>
  <p><%= link_to "Create New Event", new_event_url, :class => "btn btn-success btn-large" %></p>
</div>
 
<table class="table table-striped">
  <thead>
    <th>Event</th>
    <th>Total Participants</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= link_to event.name, event_path(event) %> - <%= event.description %><br />
          <%= event.location %>
        </td>
        <td><%= event.total_participants %></td>
        <td>
          <%= link_to "Edit", edit_event_path(event), :class => "btn btn-primary" %>
          <%= button_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

