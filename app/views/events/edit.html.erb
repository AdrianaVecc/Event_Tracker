<div><p><%= link_to "Back to Event List", events_url, :class => "btn btn-primary btn-large" %></p></div>

<h2>Edit <%= @event.name %></h2>
 
<%= form_for @event do |form| %>
  <div>
    <%= form.label :name %><br />
    <%= form.text_field :name %>
  </div>
 
  <div>
    <%= form.label :description %><br />
    <%= form.text_field :description %>
  </div>
 
  <div>
    <%= form.label :location %><br />
    <%= form.text_field :location %>
  </div>
  <div><p></p></div>

  <p><%= form.submit :class => "btn btn-primary btn-large" %></p>

<% end %>
